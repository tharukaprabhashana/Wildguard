{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WildGuard Triage Assessment",
  "type": "object",
  "required": ["incident_id", "priority", "required_resources", "access_difficulty", "recommended_actions"],
  "properties": {
    "incident_id": { "type": "string" },
    "priority": { "type": "integer", "minimum": 1, "maximum": 5 },
    "required_resources": {
      "type": "array",
      "items": { "type": "string" }
    },
    "access_difficulty": { "type": "string", "enum": ["open", "river", "forest", "cliff"] },
    "recommended_actions": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
